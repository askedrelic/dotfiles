### Standard variables
#change the titlebar in xterms
PROMPT_COMMAND='echo -ne "\033]0;${PWD}\007"'
export PAGER=/usr/bin/less
export BROWSER='firefox'
export LS_OPTIONS='-F'
export CC=/usr/bin/gcc
# Make perl localization work
export LC_ALL=C
export LANGUAGE=en_US

