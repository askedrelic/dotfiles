[user]
    email = "askedrelic@gmail.com"
    name = "Matt Behrens"
[color]
    pager = true
    ui = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[core]
    #Only 1.6.6 allows ~ references
	excludesfile = ~/.gitignore
[alias]
    st = status
    ci = commit -v
    cm = commit -m
    br = branch
    co = checkout

    #simple log with branches
    #git 1.5
    # lg = log --graph --pretty=format:'%Cred%h%Creset - %s %Cgreen(%an, %cr)%Creset' --abbrev-commit --date=relative
    #git 1.6
    lg = log --graph --pretty=format:'%Cred%h%Creset%C(yellow)%d%Creset %Cblue%an%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative

    logstat = log -M --summary --stat --date=relative --abbrev-commit
    logpatch = log -p --date=relative --abbrev-commit

    #diff
    staged = diff --cached
    unstaged = diff
    both = diff HEAD

    changes=diff --name-status -r
    diffstat=diff --stat -r
    last  = cat-file commit HEAD
[pack]
    threads = 0
[branch]
    autosetupmerge = true
