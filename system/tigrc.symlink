# set - show
set show-date         = relative
set show-rev-graph    = yes
set show-refs         = yes
set show-line-numbers = no
set show-id           = yes
set commit-order      = topo  # Order commits topologically

# set - etc
# set commit-encoding      = "UTF-8"
set horizontal-scroll    = 35%
set split-view-height    = 65%
# set line-graphics        = "UTF-8"
set line-number-interval = 1
set tab-size             = 4

# color
color cursor white black

# bind
bind generic g move-first-line
bind generic G move-last-line
bind generic r refresh
bind generic n next
bind generic p previous
